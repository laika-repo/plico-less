.puzzle
  .grid
    position: relative
    border-radius: 10px
    background: url($host/images/puzzle/bg-grid.gif) repeat
    box-shadow: inset 1px 1px 1px rgba(0,0,0,0.5), inset -1px -1px 1px rgba(0,0,0,0.3)
    
    .piece
      cursor: pointer
    
      position: absolute
      background-repeat: no-repeat
      border-radius: 8px
      border: 3px solid $piece-border-color
      
      margin: 1px
      box-shadow: 1px 1px rgba(0,0,0,0.5), inset 1px 1px 1px rgba(0,0,0,0.5)
      filter unquote("progid:DXImageTransform.Microsoft.Shadow(Strength=1, Direction=135, Color='#000000')")
    
    .shine
      position: absolute
      width: 100%
      height: 100%
      border-radius: 10px
      background: url($host/images/shine.png) no-repeat -1100px 0
    
    .solved
      position: absolute
      border-radius: 8px
      box-shadow: 1px 1px rgba(255,255,255,0.5)
      image-shadow(inset 1px 1px 1px rgba(0,0,0,0.5), 8px)